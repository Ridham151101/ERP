<head>
  <title>Employees</title>
</head>
<body>
  <div class="container mt-4">
    <h1 class="my-4 text-center">Employees</h1>

    <div class="text-center mb-4">
      <%= link_to 'New Employee', new_employee_path, class: 'btn btn-primary' %>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-bordered mx-auto" style="max-width: 80%;">
        <thead class="thead-dark">
          <tr>
            <th>Full Name</th>
            <th>Designation</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= "#{employee.first_name} #{employee.last_name}" %></td>
              <td><%= employee.designation %></td>
              <td><%= employee.department.name %></td>
              <td>
                <%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', employee_path(employee), data: { "turbo-method": :delete , "turbo_confirm": "Are you sure want to delete this wine?"}, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</body>
