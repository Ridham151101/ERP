<div class="container mt-4">
  <h1 class="my-4 text-center">Edit Employee</h1>

  <%= form_with(model: @employee, local: true, class: "form-horizontal") do |f| %>
    <div class="row mb-3">
      <div class="col-md-4">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-4">
        <%= f.label :last_name, class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-4">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :designation, class: "form-label" %>
        <%= f.text_field :designation, class: "form-control", required: true %>
      </div>
      <div class="col-md-6">
        <%= f.label :department_id, "Department", class: "form-label" %>
        <%= f.collection_select :department_id, Department.all, :id, :name, { prompt: "Choose..." }, class: "form-select", required: true %>
      </div>
    </div>

    <div class="text-center">
      <%= f.submit "Update Employee", class: "btn btn-warning" %>
      <%= link_to 'Back', employees_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
