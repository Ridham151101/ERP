<!DOCTYPE html>
<html>
  <head>
    <title>Erp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= turbo_stream_from "flash" %>

    <%= render 'layouts/navbar' %>
    
    <div id="flash">
      <%= render 'layouts/flash_messages' %>
    </div>

    <%= yield %>
  </body>
</html>